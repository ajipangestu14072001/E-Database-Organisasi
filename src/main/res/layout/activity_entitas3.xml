<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/background_login"
        android:padding="5dp"
        tools:context=".Entitas3Activity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relative0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entitas 3"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative0"
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sdmi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="SD/MI Sederajat"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative1"
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/smpmts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="SMP/MTS Sederajat"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative2"
                    android:id="@+id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/smasmk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="SMA/SMK Sederajat"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative3"
                    android:id="@+id/relative4"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="S1 Sederajat"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative4"
                    android:id="@+id/relative5"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/s2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="S2 Sederajat"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative5"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/next3"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_background"
                        android:text="Next"
                        android:textColor="@android:color/white" />
                    <Button
                        android:id="@+id/back3"
                        android:layout_toLeftOf="@id/next3"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_background"
                        android:text="Previous"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/mainNavigationView"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@menu/header"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="#006468"
        app:menu="@menu/navigation"/>
</androidx.drawerlayout.widget.DrawerLayout>