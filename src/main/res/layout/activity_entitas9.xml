<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/background_login"
        android:padding="5dp"
        tools:context=".Entitas9Activity">
        <RelativeLayout
            android:id="@+id/relative0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entitas 9"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relative0"
            android:id="@+id/relative1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgview"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relative1"
            android:gravity="center_horizontal"
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/pilih"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="Pilih Photo"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/upload"
                android:layout_toRightOf="@id/pilih"
                android:layout_marginLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="Upload Data"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relative2"
            android:layout_width="match_parent"
            android:id="@+id/relative3"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_background"
                android:text="Tampilkan Data"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/mainNavigationView"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@menu/header"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="#006468"
        app:menu="@menu/navigation"/>
</androidx.drawerlayout.widget.DrawerLayout>