<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TENTANG APLIKASI"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ipnuippnu" />

                <TextView
                    android:id="@+id/txt_app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-DatabaseOrganisasi"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0 BETA"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_dev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Developer Info"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_dev_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="PC IPNU IPPNU Trenggalek"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_sosmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Social Media"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:autoLink="web"
                    android:text="Facebook : "
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/fbipnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="IPNU Trenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/fbippnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="PC IPPNU Trenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_twt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:autoLink="web"
                    android:text="Twitter : "
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/twipnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="IPNU Trenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/twippnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="PC IPPNU Trenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_ig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:textSize="17sp"
                    android:text="Instagram : "
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/igipnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="pc.ipnu_trenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/igippnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="pcippnutrenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:textSize="17sp"
                    android:text="Youtube : "
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/ytipnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="IPNU Tenggalek"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/ytippnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="PC IPPNU TRENGGALEK"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/mainNavigationView"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@menu/header"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="#006468"
        app:menu="@menu/navigation"/>

</androidx.drawerlayout.widget.DrawerLayout>