<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/background_login"
        android:padding="5dp"
        tools:context=".Entitas1Activity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relative0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entitas 1"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative0"
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/namalengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Nama Lengkap"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative1"
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tempatlahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Tempat Lahir"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative2"
                    android:id="@+id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tanggallahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Tanggal Lahir"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative3"
                    android:id="@+id/relative4"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl4"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/rtrwdusun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="RT/RW Dusun"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative4"
                    android:id="@+id/relative5"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/desa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Desa"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative5"
                    android:id="@+id/relative6"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl6"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kecamatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Kecamatan"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative6"
                    android:id="@+id/relative7"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl7"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kabupaten"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Kabupaten"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative7"
                    android:id="@+id/relative8"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl8"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/provinsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Provinsi"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative8"
                    android:id="@+id/relative9"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl9"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/golongandarah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:hint="Golongan Darah"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative9"
                    android:id="@+id/relative10"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl10"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kodepos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="number"
                            android:hint="Kode Pos"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative10"
                    android:id="@+id/relative11"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl11"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="number"
                            android:hint="NIK"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative11"
                    android:id="@+id/relative12"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl12"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nomorhp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="number"
                            android:hint="Nomor HP"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative12"
                    android:id="@+id/relative13"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:id="@+id/tl13"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="57dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/alamatemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="textEmailAddress"
                            android:hint="Alamat Email"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/relative13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/next1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/button_background"
                        android:text="Next"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/mainNavigationView"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@menu/header"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="#006468"
        app:menu="@menu/navigation"/>
</androidx.drawerlayout.widget.DrawerLayout>
